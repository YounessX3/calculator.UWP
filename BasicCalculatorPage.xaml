<Page
    x:Class="AppPerfect.BasicCalculatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppPerfect"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- ✨ Button Style for consistent sizing -->
        <Style x:Key="CalculatorButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <TextBox x:Name="Display"
                 Grid.Row="0"
                 FontSize="48"
                 Margin="20"
                 TextAlignment="Right"
                 IsReadOnly="True"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 Text="0"/>

        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 1 -->
            <Button Content="7" Grid.Row="0" Grid.Column="0" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="8" Grid.Row="0" Grid.Column="1" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="9" Grid.Row="0" Grid.Column="2" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="÷" Grid.Row="0" Grid.Column="3" Click="Operator_Click" Style="{StaticResource CalculatorButtonStyle}"/>

            <!-- Row 2 -->
            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="×" Grid.Row="1" Grid.Column="3" Click="Operator_Click" Style="{StaticResource CalculatorButtonStyle}"/>

            <!-- Row 3 -->
            <Button Content="1" Grid.Row="2" Grid.Column="0" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="2" Grid.Row="2" Grid.Column="1" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="3" Grid.Row="2" Grid.Column="2" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="−" Grid.Row="2" Grid.Column="3" Click="Operator_Click" Style="{StaticResource CalculatorButtonStyle}"/>

            <!-- Row 4 -->
            <Button Content="0" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Click="Number_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="C" Grid.Row="3" Grid.Column="2" Click="Clear_Click" Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" Click="Operator_Click" Style="{StaticResource CalculatorButtonStyle}"/>

            <!-- Row 5: Equals -->
            <Button Content="=" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4"
                    Click="Equals_Click"
                    FontSize="36"
                    Style="{StaticResource CalculatorButtonStyle}"/>
        </Grid>
    </Grid>
</Page>
