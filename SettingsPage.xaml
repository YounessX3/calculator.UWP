<Page
    x:Class="AppPerfect.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppPerfect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="24">

            <TextBlock Text="Settings" FontSize="32" FontWeight="SemiBold" />

            <StackPanel>
                <TextBlock Text="Theme" FontSize="18" Margin="0,0,0,8"/>
                <ComboBox x:Name="ThemeComboBox" Width="200" SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="System Default" IsSelected="True"/>
                    <ComboBoxItem Content="Light"/>
                    <ComboBoxItem Content="Dark"/>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="App Version" FontSize="18" Margin="0,20,0,4"/>
                <TextBlock x:Name="AppVersionTextBlock" FontSize="16" Foreground="Gray"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
